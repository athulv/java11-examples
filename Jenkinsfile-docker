pipeline {
    agent any

    environment {
        DOCKER_HUB_CREDENTIALS = 'e2271c88-914b-4070-8dfc-6570573a2026' // Update this if your credentials ID is different
    }

    stages {
        stage('Clone Repo') {
            steps {
                git 'https://github.com/athulv/java11-examples.git'
            }
        }

        stage('Build with Maven') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh 'docker build -t athulvtk/java11-examples .'
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                script {
                    withDockerRegistry([credentialsId: env.DOCKER_HUB_CREDENTIALS, url: '']) {
                        sh 'docker push athulvtk/java11-examples'
                    }
                }
            }
        }

        stage('Run Locally') {
            steps {
                sh 'docker run --rm athulvtk/java11-examples'
            }
        }
    }
}

