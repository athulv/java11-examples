pipeline {
    agent any

    environment {
        DOCKER_HUB_CREDENTIALS = 'e2271c88-914b-4070-8dfc-6570573a2026' // Replace with your Jenkins credential ID
        IMAGE_NAME = 'athulvtk/java11-examples'
    }

    stages {
        stage('Clone Repo') {
            steps {
                git 'https://github.com/athulv/java11-examples.git'
            }
        }

        stage('Build with Maven') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Prepare Docker Context') {
            steps {
                sh 'mkdir -p docker-build'
                sh 'cp Dockerfile docker-build/'
                sh 'cp target/java11-examples-1.0-SNAPSHOT-jar-with-dependencies.jar docker-build/app.jar'
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('docker-build') {
                    sh "docker build -t ${IMAGE_NAME} ."
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                withDockerRegistry([credentialsId: "${DOCKER_HUB_CREDENTIALS}", url: ""]) {
                    sh "docker push ${IMAGE_NAME}"
                }
            }
        }

        stage('Run Locally') {
            steps {
                sh "docker run --rm ${IMAGE_NAME}"
            }
        }
    }
}

